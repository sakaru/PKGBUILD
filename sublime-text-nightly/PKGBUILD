# Maintainer: Sander Boom <sander at inflowmotion dot nl>

pkgname=sublime-text-nightly
pkgver=3.3008
pkgrel=1
pkgdesc="sophisticated text editor for code, html and prose - nightly build (available to registered users only)"
arch=('i686' 'x86_64')
url="http://www.sublimetext.com/nightly"
license=('custom')
depends=(libpng gtk2)
conflicts=(sublime-text sublime-text-dev)
provides=(sublime-text sublime-text-dev)

_pkgrealname=sublime-text
_archurl='x64'

[[ "${CARCH}" = i686 ]] && _archurl='x32'

source=(
  "http://c758482.r82.cf2.rackcdn.com/sublime_text_${pkgver:0:1}_build_${pkgver:2}_${_archurl}.tar.bz2"
  sublime-text.desktop
)
md5sums=('eb1b5cd4da0c4a342ff09e8351ed696d'
         'f6d0e7f5da0e8c1d57640f62173295bf')

[[ "${CARCH}" = i686 ]] && md5sums[0]='5747bab014f1e8bc0d915675a33529f5'

build () {
  cd ${srcdir}

  install -Dm644 "${_pkgrealname}.desktop" "${pkgdir}/usr/share/applications/${_pkgrealname}.desktop"

  icondir="${srcdir}/sublime_text_${pkgver:0:1}/Icon"
  for dir in `ls "$icondir/"`
  do
    if [ -d "$icondir/$dir" ]; then
      install -Dm644 "${icondir}/${dir}/${_pkgrealname}.png" "${pkgdir}/usr/share/icons/hicolor/${dir}/apps/${_pkgrealname}.png"
    fi
  done

  install -dm755 ${pkgdir}/opt
  cp -r "sublime_text_${pkgver:0:1}" ${pkgdir}/opt/${_pkgrealname}

  mkdir -p ${pkgdir}/usr/bin/
  ln -s /opt/sublime-text/sublime_text ${pkgdir}/usr/bin/subl
}
