# Maintainer: Sander Boom <sander at inflowmotion dot nl>

pkgname=sublime-text-nightly
pkgver=3.3010
pkgrel=1
pkgdesc="sophisticated text editor for code, html and prose - nightly build (available to registered users only)"
arch=('i686' 'x86_64')
url="http://www.sublimetext.com/3"
license=('custom')
depends=(libpng gtk2)
conflicts=(sublime-text sublime-text-dev)
provides=(sublime-text sublime-text-dev)

_pkgrealname=sublime_text
_archurl='x64'

[[ "${CARCH}" = i686 ]] && _archurl='x32'

source=(
  "http://c758482.r82.cf2.rackcdn.com/sublime_text_${pkgver:0:1}_build_${pkgver:2}_${_archurl}.tar.bz2"
)
md5sums=('b2c8b987cc4930d25403ef7e47cffa46')

[[ "${CARCH}" = i686 ]] && md5sums[0]='c1a2ba8eec446f83598e6a3060371e1d'

build () {
  cd ${srcdir}

  install -dm755 ${pkgdir}/opt
  cp -r "sublime_text_${pkgver:0:1}" ${pkgdir}/opt/${_pkgrealname}

  icondir="${srcdir}/sublime_text_${pkgver:0:1}/Icon"
  for dir in `ls "$icondir/"`
  do
    if [ -d "$icondir/$dir" ]; then
      install -Dm644 "${icondir}/${dir}/sublime-text.png" "${pkgdir}/usr/share/icons/hicolor/${dir}/apps/sublime-text.png"
    fi
  done

  install -Dm644 ${srcdir}/${_pkgrealname}_${pkgver:0:1}/${_pkgrealname}.desktop ${pkgdir}/usr/share/applications/${_pkgrealname}.desktop

  install -dm755 ${pkgdir}/usr/bin
  ln -s /opt/${_pkgrealname}/${_pkgrealname} ${pkgdir}/usr/bin/subl
}
