# Maintainer: Sid Karunaratne <sid@karunaratne.net>
# Contributor: Spider.007 <archPackage@spider007.net>
pkgname=rcracki_mt
pkgver=0.7.0
pkgrel=1
pkgdesc="used to perform a rainbow table attack on password hashes. It is intended for indexed & perfected rainbow tables, mainly generated by the distributed project www.freerainbowtables.com"
url="http://rcracki.sourceforge.net/"
makedepends=('p7zip')
depends=('openssl')
license=('GPL')
source=("http://downloads.sourceforge.net/project/rcracki/${pkgname}/${pkgname}_$pkgver/${pkgname}_${pkgver}_src.7z")
md5sums=('7894d6bcec9e307fac27a8f9052ade80')
arch=('i686' 'x86_64')

build() {
    cd "${srcdir}/${pkgname}_${pkgver}_src/${pkgname}"
    make
}

package() {
    cd "${srcdir}/${pkgname}_${pkgver}_src/${pkgname}"
    make DESTDIR="$pkgdir" install
}
