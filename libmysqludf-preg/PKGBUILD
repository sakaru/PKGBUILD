# Maintainer: Sid Karunaratne <sid@karunaratne.net>
pkgname=libmysqludf-preg
_pkgname=lib_mysqludf_preg
pkgver=1.0.1
pkgrel=1
pkgdesc="a library of mysql UDF that provide access to the PCRE library for pattern matching"
arch=('i686' 'x86_64')
url="http://www.mysqludf.org/lib_mysqludf_preg/"
license=('GPL3')
depends=('mysql' 'pcre')
makedepends=('mysql')
install=install
source=("http://www.mysqludf.org/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('50c7179b354148d66a2324f1a8ed918b133924c8fc0cd53c28afda70e1768daa')


build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  ./configure
  make
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
  rm "${pkgdir}/usr/lib/mysql/plugin/lib_mysqludf_preg.la"
  rm "${pkgdir}/usr/lib/mysql/plugin/lib_mysqludf_preg.a"
}
